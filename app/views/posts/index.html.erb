<div style="margin: 20px 40px;">
  <div class="card mb-3" style="border: none;">
    <div class="row g-0" style="gap: 1.5%;">
      <div class="col-md-4" style="width: 70px;">
        <img src ='<%= @user.photo %>' class="img-fluid rounded" alt="User Photo">
      </div>
      <div class="col-md-8">
        <div class="card-body" style="border: 1px solid black; margin-top: 5px; width: 1345px;">
          <h5 class="card-title"><%= @user.name %></h5>
          <p class="card-text"><small class="text-muted">
            Number of posts: <%= @user.posts_counter %></small>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% @posts.each do |post|%>
    <div class="card border-success mb-3">
      <div class="card-body text-success">
        <a href = <%= user_post_path(post.author.id, post.id) %> style="text-decoration: none;">
          <h5 class="card-title">Post <%= @posts.index(post) + 1%></h5>
        </a>
        <p class="card-text">
          <%= post.text %>
        </p>
        <div class= "card-text" style="float: right">
          <span class="card-text">Comments: <%= post.comments_counter%></span>
          <span class="card-text">Likes: <%= post.likes_counter%></span>
        </div>
      </div>
      <% if post.comments.any? %>
        <% post.five_most_recent_comments.each do |comment|%>
          <div class="card mb-3" style="width: 100%;">
            <div class="card-body text-success text-bg-light p-3">
              <p class = "m-0"><strong><%= comment.author.name%></strong>: 
                <%= comment.text%>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
<div/>
